{
  "name": "sprint-capacity-app",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:auth": "node ./tools/check-dev-auth-env.js && next dev",
    "validate:env": "node ./tools/validate-env.js",
    "build": "NEXT_PUBLIC_VERSION=v0.1.0-test npm run validate:env && npm run check:next-auth-imports && prisma generate && next build",
    "start": "next start",
    "prisma": "prisma",
    "test": "vitest",
    "check:next-auth-imports": "node ./tools/check-next-auth-imports.js",
    "lint": "eslint -c .eslintrc.cjs --resolve-plugins-relative-to ./tools --ext .js,.jsx,.ts,.tsx app/",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "e2e:dev": "next dev",
    "e2e:ci": "playwright test --reporter=github"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "autoprefixer": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.544.0",
    "next": "^13.4.20",
    "next-auth": "^4.22.1",
    "postcss": "^8.4.0",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jsdom": "^26.1.0",
    "msw": "^1.3.5",
    "node-mocks-http": "^1.17.2",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  }
}
